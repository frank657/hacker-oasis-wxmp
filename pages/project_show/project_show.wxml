<!--pages/project_show/project_show.wxml-->
<view class="container-page">
  <view class="header-show">
    <view>
      <image class="avatar-ml" src="../../images/avatars/bingq.jpg" mode="cover"></image>
    </view>
    <view class="header-text">
      <view>
        <text class="h1 text-grey-dark">Awesome Project</text>
      </view>
      <view>
        <text class="h3 text-grey">by</text><text class="h3 text-blue"> SeaDragon23</text>
      </view>
    </view>
  </view>
  <view class="description-project">
    <view class="img-project-square" style="background-image: url({{cover_photo.url}});">
    </view>
    <view class="description-project-text">
      <text class="p">More about the project, enough to make this take up multiple lines.</text>
    </view>
  </view>
  <view class="info-show-hacksession">
    <text class="h3 text-blue">NEXT HACK SESSION</text>
    <text class="h1 text-dark-grey">{{hacker_session[0].date}}</text>
    <text class="h3 text-dark-grey">10:00AM</text>
    <view class="row-avatars">
      <image class="icon-sm mr" src="/images/attendees.png"></image>
      <image class="avatar-small" src="../../images/avatars/bingq.jpg"></image>
      <image class="avatar-small" src="../../images/avatars/jimmyc.jpg"></image>
      <image class="avatar-small" src="../../images/avatars/ericd.jpg"></image>
      <image class="avatar-small" src="../../images/avatars/nicoleg.jpg"></image>
    </view>
  </view>
  <view class="info-show-address">
    <image class="icon-sm mr" src="/images/location.png"></image>
    <view class="wrapper-location">
      <text class="p text-dark-grey">{{hacker_session[0].address}}</text>
      <text class="p-small text-grey">1.4km away from you</text>
    </view>
  </view>
  <view class="box-comments">
    <view class="comment">
      <image class="avatar-sq" style="margin: 0;" src="../../images/avatars/jimmyc.jpg"></image>
      <view class="comment-section ml">
        <text class="comment-section-header p-small text-grey">Jimmy Chen - 2 hours ago</text>
        <view class="comment-text-box">
          <text class="text-dark-grey">Testing the comment design with enough text to span multiple lines.</text>
        </view>
      </view>
    </view>
    <view class="comment self">
      <image class="avatar-sq" style="margin: 0;" src="../../images/avatars/bingq.jpg"></image>
      <view class="comment-section mr">
        <view class="comment-text-box">
          <text class="text-dark-grey">Testing single line.</text>
        </view>
      </view>
    </view>
    <view class="comment">
      <image class="avatar-sq" style="margin: 0;" src="../../images/avatars/nicoleg.jpg"></image>
      <view class="comment-section ml">
        <text class="comment-section-header p-small text-grey">Nicole G - 44 minutes ago</text>
        <view class="comment-text-box">
          <text class="text-dark-grey">Testing another comment with enough text to span multiple lines.</text>
        </view>
      </view>
    </view>
  </view>

  <view class="invisible-footer"></view>
  <view class="box-cta pos-fixed">
    <button class="btn-red" bindtap="#">Attend</button>
  </view>
</view>

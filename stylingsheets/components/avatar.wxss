.avatar-sm {
  width:30px;
  height:30px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
}

.avatar-md {
  width:45px;
  height:45px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
  object-fit: cover;
}

.avatar-ml {
  width:80px;
  height:80px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
  object-fit: cover;
}

.avatar-lg {
  width:120px;
  height:120px;
  border-radius:50%;
  flex-shrink: 0;
  flex-grow: 0;
  object-fit: cover;
}

.avatar-shadow {
  box-shadow: 2px 2px 20px rgba(0,0,0,0.1);
}

.avatar-sq {
  width: 200rpx;
  height: 200rpx;
  border-radius: 5px;
  flex-shrink: 0;
  flex-grow: 0;
}